<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_pt_blocking" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pt.blocking</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50" />
        <field name="inherit_id" ref="ptplus.res_config_settings_view_form_pt" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='account_settings_pt']" position="inside">
                <setting
                    id="enable_l10n_pt_issuance_blocking"
                    company_dependent="1"
                    help="These configurations will allow you to block document issuance on certain partners and products."
                    invisible="not pt_invoicing"
                >
                    <field name="l10n_pt_issuance_blocking"/>

                    <div class="mt16 text-muted">
                        <div>
                            <field name="l10n_pt_issuance_blocking_archived"/>
                            <label for="l10n_pt_issuance_blocking_archived"/>
                        </div>
                        <div>
                            <field name="l10n_pt_issuance_blocking_sale_not_ok"/>
                            <label for="l10n_pt_issuance_blocking_sale_not_ok"/>
                        </div>
                    </div>

                </setting>
            </xpath>
        </field>
    </record>
</odoo>
